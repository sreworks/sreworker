HOST=0.0.0.0
PORT=7788
DEBUG=true

# ========================================
# AI CLI Configuration
# ========================================
# Default AI CLI to use (claude, opencode, custom)
DEFAULT_AI_CLI=claude

# Enabled AI CLIs (comma separated)
